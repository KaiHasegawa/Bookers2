<!DOCTYPE html>
<html>
  <head>
    <title>BootstrapTest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="banner">
  		<p>Bookers</p>
  	<div id="slidemenu">
  		<ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    	 <% if user_signed_in? %>
          <li><%= link_to user_path(current_user) do%>
             <span class="glyphicon glyphicon-home home"></span>  Home
            <%end%>
          </li>

          <li><%= link_to users_path do%>
             <span class="glyphicon glyphicon-user users"></span>  Users
            <%end%>
          </li>
          
          <li><%= link_to books_path do%>
             <span class="glyphicon glyphicon-book books"></span>  Books
            <%end%>
          </li>

          <li><%= link_to destroy_user_session_path,method: :delete do%>
             <span class="glyphicon glyphicon-log-out logout"></span>  logout
            <%end%>
          </li>
	      <% else %>

        <li><%= link_to root_path do%>
           <span class="glyphicon glyphicon-home home"></span>  Home
          <%end%>
        </li>
        <li><%= link_to home_about_path do%>
           <span class="glyphicon glyphicon-link about"></span>  About
          <%end%>
        </li>
        
        <li><%= link_to new_user_registration_path do%>
             <span class="glyphicon glyphicon-edit sign_up"></span>  sign up
            <%end%>
        </li>
        <li><%= link_to user_session_path do%>
             <span class="glyphicon glyphicon-log-in sign_in"></span>  log in
            <%end%>
        </li>
  	    <% end %>
 		</ul>
	</div>
	</div>
    <%= yield %>
            <p>CopyRight Infratop.inc</p>
  </body>
</html>
