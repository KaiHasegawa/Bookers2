<body>
    <%= render "layouts/profile", user: @user,book: @book %>
        <div class="col-md-9">
          <h2>Books</h2>
            <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th colspan="3"></th>
              </tr>
            </thead>
             <tbody>
              <% @books.each do |book| %>
               <tr colsapn="3">
                  <td><%= link_to user_path(book.user) do%>
                   <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg",size:'40x40' %>
                   <%end%>
                  </td>
                  <td><%= link_to book_path(book),class: "book_#{book.id}" do%>
                       <%= book.title %>
                    <%end%>
                  </td>
                  <td><%= book.body %>
                  </td>
               </tr>
              <% end %>
             </tbody>
          　</table>
    　 </div>
</div>
</body>
