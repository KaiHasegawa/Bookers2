<%= render "layouts/profile", user: @user,book: @book %>
  <div class="col-md-9">
          <h2>Book Detail</h2>
            <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
               <tr colsapn="3">
                <% if @book.user == current_user %>
                  <td><%= link_to user_path(@book.user.id) do%>
                   <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg" %>
                   <%= @book.user.name %>
                   <%end%>
                  </td>
                  <td><%= @book.title %></td>
                  <td><%= @book.body %></td>
                  <td><%= link_to 'Edit', edit_book_path, class: "btn btn-success btn-block" %>
                  <td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger btn-block", method: :delete, data: {confirm: "本当に消しますか？"} %></td>


                <% else %>
                  <td><%= link_to user_path(@book.user.id) do%>
                   <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-thumb",fallback: "no_image.jpg" %>
                   <%= @book.user.name %>
                   <%end%>
                  </td>
                  <td><%= link_to book_path(@book) do%>
                    <%= @book.title %>
                    <%end%>
                  </td>
                  <td><%= @book.body %></td>
                <% end %>
               </tr>
             </tbody>
          　</table>
  </div>